{
  "manifest_version": 3,
  "name": "DomShot",
  "version": "1.0.0",
  "description": "自选网页元素并保存为矢量或高清截图",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/html-to-image.js", "content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/html-to-image.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
